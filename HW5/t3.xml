<mujoco>
  <visual>
    <global elevation="-20"/>
    <headlight ambient=".3 .3 .3" diffuse=".9 .9 .9"/>
  </visual>

  <default>
    <geom rgba="0.8 0.6 .4 1"/>
  </default>

  <worldbody>
    <!-- Left pendulum (same as before, with motor) -->
    <body name="link1">
      <joint name="link1" axis="0 -1 0"/>
      <geom type="capsule" size=".02" fromto="0 0 0 1 0 0" mass="0"/>
      <geom type="sphere" size=".1" mass="1" pos="1 0 0"/>
    </body>

    <body name="motor1">
      <joint name="motor1" axis="0 -1 0"/>
      <geom type="box" size=".1 .1 .1" mass="30" contype="0" conaffinity="0" rgba=".6 .4 .8 1"/>
    </body>

    <!-- Right pendulum with reinforced joint -->
    <body name="link2" pos="1.5 0 0">
      <!-- increased armature to represent reinforcement -->
      <joint name="link2" armature="2.5" axis="0 -1 0" damping="0.002"/>
      <geom type="capsule" size=".02" fromto="0 0 0 1 0 0" mass="0"/>
      <geom type="sphere" size=".1" mass="1" pos="1 0 0"/>

      <!-- visible reinforcement body at the joint -->
      <body name="joint_reinforcement" pos="0 0 0">
        <geom type="box" size=".1 .1 .1" mass="1" rgba=".6 .4 .8 1"/>
      </body>
    </body>
  </worldbody>

  <equality>
    <!-- gear ratio for left pendulum remains -->
    <joint joint1="motor1" joint2="link1" polycoef="0 3"/>
  </equality>

  <actuator>
    <!-- actuator for left pendulum only -->
    <position name="link1" joint="motor1" kp=".3" ctrlrange="-5 5"/>
  </actuator>

  <keyframe>
    <!-- initial tilt for right pendulum -->
    <key name="initial_pose" qpos="0 0 0.4"/>
  </keyframe>
</mujoco>
