<?xml version="1.0" ?>
<mujoco model="mass_spring_damper">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.001" integrator="RK4"/>

  <worldbody>
    <geom name="ground" type="plane" pos="0 0 0" size="0 0 0.01" rgba="0.8 0.8 0.8 1"/>
    <body name="wall" pos="0 0 0">
      <geom name="wall_geom" type="box" pos="-0.05 0 0.10" size="0.05 0.2 0.10" rgba="0.6 0.2 0.2 1"
            contype="0" conaffinity="0"/>
      <site name="wall_site" pos="0 0 0.10" size="0.01"/>
    </body>

    <body name="mass" pos="0.30 0 0.10">
      <joint name="slider" type="slide" axis="1 0 0" damping="5"/>
      <inertial pos="0 0 0" mass="1.0" diaginertia="0.001 0.0005 0.001"/>
      <geom name="mass_geom" type="box" size="0.05 0.08 0.05" rgba="0.2 0.4 0.8 1"/>
      <site name="mass_site" pos="-0.05 0 0" size="0.02" rgba="0 1 0 1"/>
    </body>
  </worldbody>

  <tendon>
    <fixed name="spring_tendon" springlength="0.20" stiffness="200" damping="0">
      <joint joint="slider" coef="-1"/>
    </fixed>
  </tendon>

  <visual>
    <map znear="0.01"/>
  </visual>
</mujoco>
